{
    "manifest_version": 3,
    "name": "URLias",
    "description": "Use terminal-style aliases to navigate the web.",
    "version": "1.0",
    "permissions": ["storage"],
    "omnibox": { "keyword": "go" },
    "action": {
      "default_popup": "views/popup.html",
      "default_icon": {
        "128": "assets/icon128.png"
      }
    },
    "background": {
      "service_worker": "scripts/background.js",
      "type": "module"
    },
    "icons": {
      "128": "assets/icon128.png"
    }
  }
  