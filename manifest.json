{
    "manifest_version": 3,
    "name": "URLias",
    "description": "Navigate the web instantly with terminal-style URL aliases and custom shortcuts.",
    "version": "1.5",
    "permissions": ["storage"],
    "omnibox": { "keyword": "go" },
    "action": {
      "default_popup": "views/popup.html",
      "default_icon": {
        "128": "assets/icon128.png"
      }
    },
    "background": {
      "service_worker": "scripts/background.js",
      "type": "module"
    },
    "options_page": "views/options.html",
    "icons": {
      "128": "assets/icon128.png"
    }
  }
  