      
{
  "manifest_version": 3,
  "name": "URLias",
  "description": "Use terminal-style aliases to navigate the web.",
  "version": "2.0",
  "permissions": ["storage", "tabs", "notifications"],
  "omnibox": { "keyword": "go" },
  "action": {
    "default_popup": "views/popup.html",
    "default_icon": {
      "128": "assets/icon128.png"
    }
  },
 "background": {
    "scripts": ["scripts/background.js"],
    "type": "module"
  },
  "icons": {
    "128": "assets/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "URLias@example.com",
      "strict_min_version": "109.0"
    }
  }
}

    